# Database Configuration
MONGODB_URI=mongodb://localhost:27017/your-database-name
PORT=3000

# Auth Configuration
USE_MOCK_AUTH=false  # Set to false to use real Stytch authentication
USE_IMPERSONATION=false

# Stytch Configuration (Only needed when USE_MOCK_AUTH=false)
STYTCH_PROJECT_ID=project-test-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx  # Your Test Project ID
STYTCH_SECRET=secret-test-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx        # Your Test Secret
STYTCH_REDIRECT_URL=http://localhost:3000/auth/authenticate

# Environment
NODE_ENV=development 